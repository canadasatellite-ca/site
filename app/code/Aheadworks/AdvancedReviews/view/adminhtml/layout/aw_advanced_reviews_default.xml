<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Aheadworks\AdvancedReviews\Block\Adminhtml\Page\Menu" name="aw_ar_menu">
                <block class="Aheadworks\AdvancedReviews\Block\Adminhtml\Page\Menu\Item" name="aw_ar_menu_item.reviews">
                    <arguments>
                        <argument name="path" xsi:type="string">*/review/index</argument>
                        <argument name="label" xsi:type="string">Reviews</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_AdvancedReviews::reviews</argument>
                        <argument name="controllers" xsi:type="array">
                            <item name="0" xsi:type="string">review</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\AdvancedReviews\Block\Adminhtml\Page\Menu\Item" name="aw_ar_menu_item.mail_log">
                    <arguments>
                        <argument name="path" xsi:type="string">*/queue/index</argument>
                        <argument name="label" xsi:type="string">Mail Log</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_AdvancedReviews::mail_log</argument>
                        <argument name="controllers" xsi:type="array">
                            <item name="0" xsi:type="string">queue</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\AdvancedReviews\Block\Adminhtml\Page\Menu\Item" name="aw_ar_menu_item.settings">
                    <arguments>
                        <argument name="path" xsi:type="string">adminhtml/system_config/edit/section/aw_advanced_reviews</argument>
                        <argument name="label" xsi:type="string">Settings</argument>
                        <argument name="resource" xsi:type="string">Aheadworks_AdvancedReviews::config_aw_advanced_reviews</argument>
                    </arguments>
                </block>

                <block class="Aheadworks\AdvancedReviews\Block\Adminhtml\Page\Menu\Item" name="aw_ar_menu_item.readme">
                    <arguments>
                        <argument name="label" xsi:type="string">Readme</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://confluence.aheadworks.com/display/EUDOC/Advanced+Reviews+-+Magento+2</item>
                            <item name="target" xsi:type="string">_blank</item>
                            <item name="class" xsi:type="string">separator</item>
                        </argument>
                    </arguments>
                </block>
                <block class="Aheadworks\AdvancedReviews\Block\Adminhtml\Page\Menu\Item" name="aw_ar_menu_item.support">
                    <arguments>
                        <argument name="label" xsi:type="string">Get Support</argument>
                        <argument name="link_attributes" xsi:type="array">
                            <item name="href" xsi:type="string">http://ecommerce.aheadworks.com/contacts/</item>
                            <item name="target" xsi:type="string">_blank</item>
                        </argument>
                    </arguments>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
