<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="convert_to_bundle">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Convert to Bundle</item>
                            <item name="message" xsi:type="string" translate="true">Convert to Bundle selected items?</item>
                        </item>
                        <item name="type" xsi:type="string">convert_to_bundle</item>
                        <item name="label" xsi:type="string" translate="true">Convert to Bundle</item>
                        <item name="url" xsi:type="url" path="casat/product/massConvertToBundle"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>
