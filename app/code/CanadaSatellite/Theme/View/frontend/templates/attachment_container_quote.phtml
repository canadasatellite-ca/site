            <?php if ($block->isShowHowToDownloadMessage()): ?>
                <div class="access-notice"><span>* <?php echo $block->getHowToDownloadMessage() ?></span></div>
            <?php endif; ?>

        </div>
    </td>
</tr>
<?php endif; ?>
