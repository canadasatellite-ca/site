<?xml version="1.0"?>
<page layout="2columns-left" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <head>
        <title>My Devices</title>
    </head>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">My Devices</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="CanadaSatellite\Theme\Block\Customer\Device\ListDevice" name="customer_device_list" template="customer/device/list.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
