<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="channel_amazon">
        <job name="channel_amazon_listing_state_machine" instance="Magento\Amazon\Cron\ListingStateMachineAction" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="channel_amazon_invalidate_attribute_indexer" instance="Magento\Amazon\Cron\AttributeIndexerInvalidateAction" method="execute">
            <schedule>0 */12 * * *</schedule>
        </job>
        <job name="channel_amazon_invalidate_pricing_indexer" instance="Magento\Amazon\Cron\PricingIndexerInvalidateAction" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
        <job name="channel_amazon_invalidate_stock_indexer" instance="Magento\Amazon\Cron\StockIndexerInvalidateAction" method="execute">
            <schedule>0 * * * *</schedule>
        </job>
        <job name="channel_amazon_clean_logs" instance="Magento\Amazon\Cron\CleanLogProcessingRecords" method="execute">
            <schedule>*/5 * * * *</schedule>
        </job>
        <job name="channel_amazon_auth_statuses_unauthenticated" instance="Magento\Amazon\Cron\UpdateAuthenticationStatuses" method="unauthenticated">
            <schedule>32 */1 * * *</schedule>
        </job>
        <job name="channel_amazon_auth_statuses_authenticated" instance="Magento\Amazon\Cron\UpdateAuthenticationStatuses" method="authenticated">
            <schedule>27 05 * * *</schedule>
        </job>
    </group>
</config>
