<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Mview/etc/mview.xsd">
    <view id="channel_amazon_stock" class="Magento\Amazon\Model\Indexer\StockIndexer" group="indexer">
        <subscriptions>
            <table name="cataloginventory_stock_item" entity_column="product_id" />
            <table name="inventory_source_item" entity_column="source_item_id" />
            <table name="catalog_product_entity" entity_column="entity_id" />
        </subscriptions>
    </view>
    <view id="channel_amazon_pricing" class="Magento\Amazon\Model\Indexer\PricingIndexer" group="indexer">
        <subscriptions>
            <table name="catalog_product_entity_decimal" entity_column="entity_id" />
        </subscriptions>
    </view>
    <view id="channel_amazon_attribute" class="Magento\Amazon\Model\Indexer\AttributeIndexer" group="indexer">
        <subscriptions>
            <table name="channel_amazon_attribute" entity_column="id" />
        </subscriptions>
    </view>
</config>
