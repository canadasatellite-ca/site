<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magento_Amazon::css/source/module.css"/>
        <css src="Magento_Amazon::css/source/spectrum.css"/>
    </head>
    <body>
        <container name="analytics" after="content">
            <block class="Magento\Amazon\Block\Adminhtml\Analytics" name="adobe_analytics" template="Magento_Amazon::analytics.phtml"/>
        </container>
        <referenceContainer name="admin.scope.col.wrap" htmlClass="admin__old" />
        <referenceContainer name="page.main.actions">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\ActionButtons" name="setup" template="Magento_Amazon::amazon/account/buttons.phtml">
                <arguments>
                    <argument name="current" xsi:type="string">listing_details</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Details" name="amazon_account_listing_details" template="Magento_Amazon::amazon/account/listing/details.phtml"/>
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Details\View" name="amazon_account_listing_details_grid">
                <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Details\View\Tabs" name="amazon_account_listing_details_edit_tabs">
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Details\View\Tab\Activity" name="listing_details_view_activity.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">listing_details_view_activity</argument>
                        <argument name="block" xsi:type="string">listing_details_view_activity.grid.container</argument>
                    </action>
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Details\View\Tab\BestBuyBox" name="listing_details_view_bbb.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">listing_details_view_bbb</argument>
                        <argument name="block" xsi:type="string">listing_details_view_bbb.grid.container</argument>
                    </action>
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Details\View\Tab\Lowest" name="listing_details_view_lowest.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">listing_details_view_lowest</argument>
                        <argument name="block" xsi:type="string">listing_details_view_lowest.grid.container</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="listing_details_view_activity.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_activity" template="Magento_Amazon::amazon/account/listing/details/activity.phtml"/>
            <uiComponent name="amazon_listing_details_activity_grid"/>
        </referenceBlock>
        <referenceBlock name="listing_details_view_bbb.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_bestbuybox" template="Magento_Amazon::amazon/account/listing/details/bestbuybox.phtml"/>
            <uiComponent name="amazon_listing_details_bestbuybox_grid"/>
        </referenceBlock>
        <referenceBlock name="listing_details_view_lowest.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_lowest" template="Magento_Amazon::amazon/account/listing/details/lowest.phtml"/>
            <uiComponent name="amazon_listing_details_lowest_grid"/>
        </referenceBlock>
    </body>
</page>
