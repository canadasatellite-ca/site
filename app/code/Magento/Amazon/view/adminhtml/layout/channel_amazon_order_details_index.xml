<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magento_Amazon::css/source/module.css"/>
        <css src="Magento_Amazon::css/source/spectrum.css"/>
    </head>
    <body>
        <container name="analytics" after="content">
            <block class="Magento\Amazon\Block\Adminhtml\Analytics" name="adobe_analytics" template="Magento_Amazon::analytics.phtml"/>
        </container>
        <referenceContainer name="admin.scope.col.wrap" htmlClass="admin__old" /><referenceContainer name="content">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Order\Details\View" name="orders_details_view_form">
                <block class="Magento\Amazon\Block\Adminhtml\Amazon\Order\Details\View\Tabs" name="orders_details_edit_tabs">
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Order\Details\View\Tab\Details" name="amazon_order_detail.grid.container"/>
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Order\Details\View\Tab\Items" name="amazon_order_item_grid.grid.container"/>
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Order\Details\View\Tab\Tracking" name="amazon_order_tracking_grid.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">amazon_order_detail</argument>
                        <argument name="block" xsi:type="string">amazon_order_detail.grid.container</argument>
                    </action>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">amazon_order_item_grid</argument>
                        <argument name="block" xsi:type="string">amazon_order_item_grid.grid.container</argument>
                    </action>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">amazon_order_tracking_grid</argument>
                        <argument name="block" xsi:type="string">amazon_order_tracking_grid.grid.container</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="amazon_order_detail.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_details" template="Magento_Amazon::amazon/order/details/details.phtml"/>
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Order\Details\View\Tab\OrderDetails" name="amazon_order_details_view_tab_orderdetails" template="Magento_Amazon::amazon/order/details/orderdetails.phtml"/>
        </referenceBlock>
        <referenceBlock name="amazon_order_item_grid.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_item" template="Magento_Amazon::amazon/order/details/items.phtml"/>
            <uiComponent name="amazon_order_item_grid"/>
        </referenceBlock>
        <referenceBlock name="amazon_order_tracking_grid.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_tracking" template="Magento_Amazon::amazon/order/details/tracking.phtml"/>
            <uiComponent name="amazon_order_tracking_grid"/>
        </referenceBlock>
    </body>
</page>
