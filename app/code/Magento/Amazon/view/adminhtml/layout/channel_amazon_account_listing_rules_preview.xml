<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Magento_Amazon::css/source/module.css"/>
        <css src="Magento_Amazon::css/source/spectrum.css"/>
    </head>
    <body>
        <container name="analytics" after="content">
            <block class="Magento\Amazon\Block\Adminhtml\Analytics" name="adobe_analytics" template="Magento_Amazon::analytics.phtml"/>
        </container>
        <referenceContainer name="admin.scope.col.wrap" htmlClass="admin__old" />
        <referenceContainer name="page.main.actions">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\ActionButtons" name="setup" template="Magento_Amazon::amazon/account/buttons.phtml">
                <arguments>
                    <argument name="current" xsi:type="string">store_preview</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="listing_rules_preview_title" template="Magento_Amazon::amazon/account/settings/listing/rules/preview/title.phtml"/>
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Rules\Preview\View" name="listing_rules_preview_view_create">
                <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Rules\Preview\View\Tabs" name="amazon_account_listing_rules_preview_view_tabs">
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Rules\Preview\View\Tab\Ineligible" name="listing_rules_preview_view_ineligible.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">listing_rules_preview_view_ineligible</argument>
                        <argument name="block" xsi:type="string">listing_rules_preview_view_ineligible.grid.container</argument>
                    </action>
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Rules\Preview\View\Tab\Eligible" name="listing_rules_preview_view_eligible.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">listing_rules_preview_view_eligible</argument>
                        <argument name="block" xsi:type="string">listing_rules_preview_view_eligible.grid.container</argument>
                    </action>
                    <block class="Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Rules\Preview\View\Tab\Additions" name="listing_rules_preview_view_additions.grid.container"/>
                    <action method="addTab">
                        <argument name="name" xsi:type="string">listing_rules_preview_view_additions</argument>
                        <argument name="block" xsi:type="string">listing_rules_preview_view_additions.grid.container</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
        <referenceBlock name="listing_rules_preview_view_ineligible.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_ineligible" template="Magento_Amazon::amazon/account/listing/rules/preview/ineligible.phtml"/>
            <uiComponent name="amazon_account_listing_rules_ineligible_grid"/>
        </referenceBlock>
        <referenceBlock name="listing_rules_preview_view_eligible.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_eligible" template="Magento_Amazon::amazon/account/listing/rules/preview/eligible.phtml"/>
            <uiComponent name="amazon_account_listing_rules_eligible_grid"/>
        </referenceBlock>
        <referenceBlock name="listing_rules_preview_view_additions.grid.container">
            <block class="Magento\Amazon\Block\Adminhtml\Amazon\General" name="amazon_general_additions" template="Magento_Amazon::amazon/account/listing/rules/preview/additions.phtml"/>
            <uiComponent name="amazon_account_listing_rules_additions_grid"/>
        </referenceBlock>
    </body>
</page>
