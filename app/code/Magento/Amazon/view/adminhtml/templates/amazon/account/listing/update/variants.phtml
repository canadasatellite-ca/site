                    <?php $url = $block->getUrl('catalog/product/edit', ['id' => $productId]) ?>
                    <td><a href="<?= $block->escapeHtml($url) ?>" target="_blank"><?= $block->escapeHtml($productInterface->getSku()) ?></a></td>
                <?php else: ?>
                    <td><?= $block->escapeHtml(__('N/A')) ?></td>
                <?php endif ?>
            </tr>
            <tr>
                <td align="right"><?= $block->escapeHtml(__('Product Name:')) ?></td>
                <td><?= $block->escapeHtml((($productInterface->getName()) ? $productInterface->getName() : 'N/A')) ?></td>
            </tr>
            <tr>
                <td align="right"><?= $block->escapeHtml(__('Parent ASIN:')) ?></td>
                <?php if ($parentAsin): ?>
                    <td><a href="<?= $block->escapeHtml('https://www.amazon.com/exec/obidos/ASIN/' . $parentAsin) ?>" target="_blank"><?= $block->escapeHtml($parentAsin) ?></a></td>
