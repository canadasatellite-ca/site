            <br>
            <p><?= $block->escapeHtml(__('Amazon Seller SKU:  ' . $block->escapeHtml($amazonSku))) ?></p>
    <?php endif ?>
            <p><?= $block->escapeHtml(__('Amazon Name:  ' . $block->escapeHtml($name))) ?></p>
            <br>
            <p><?= $block->escapeHtml(__('Current Amazon List Price:  ' . $block->escapeHtml($price))) ?></p>
    </div>
