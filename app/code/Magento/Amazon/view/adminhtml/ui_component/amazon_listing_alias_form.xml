<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">amazon_listing_alias_form.amazon_listing_alias_form_data_source</item>
            <item name="deps" xsi:type="string">amazon_listing_alias_form.amazon_listing_alias_form_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">amazon_listing_alias_form</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">amazon_listing_alias_form</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Listing Alias Seller SKU</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="amazon_listing_alias_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Amazon\Ui\DataProvider\Form\Amazon\Account\Listing\Alias\DataProvider</argument>
            <argument name="name" xsi:type="string">amazon_listing_alias_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="channel/amazon/account_listing_alias_save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="listing_update">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="opened" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true"></item>
                <item name="sortOrder" xsi:type="number">1</item>
                <item name="visible" xsi:type="boolean">false</item>
            </item>
        </argument>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="listing_action_alias">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="opened" xsi:type="boolean">true</item>
                <item name="label" xsi:type="string" translate="true"></item>
                <item name="sortOrder" xsi:type="number">40</item>
            </item>
        </argument>
        <container name="listing_action_alias_help_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                </item>
            </argument>
            <htmlContent name="listing_update_needsasin_help">
                <argument name="block" xsi:type="object">Magento\Amazon\Block\Adminhtml\Amazon\Account\Listing\Alias\View\Help\AliasSku</argument>
            </htmlContent>
        </container>
        <field name="new_sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Assign New Seller SKU</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">new_sku</item>
                    <item name="sortOrder" xsi:type="number">55</item>
                    <item name="placeholder" xsi:type="string">Please enter a unique Seller SKU</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                        <item name="max_text_length" xsi:type="string">40</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">Must be unique and cannot be used in another listing.</item>
                </item>
            </argument>
        </field>
        <field name="asin">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Assign New ASIN</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">asin</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-alphanum" xsi:type="boolean">true</item>
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">This may be edited to an alternate Amazon ASIN.</item>
                </item>
            </argument>
        </field>
        <field name="remove_flag">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Remove Existing Seller SKU</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="notice" xsi:type="string" translate="true">This will remove the original Seller SKU from Amazon.</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>