<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">amazon_account_settings_order_form.amazon_account_settings_order_form_data_source</item>
            <item name="deps" xsi:type="string">amazon_account_settings_order_form.amazon_account_settings_order_form_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">amazon_account_settings_order_form</item>
        <item name="label" xsi:type="string" translate="true">Listing Settings</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">amazon_account_settings_order_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="amazon_account_settings_listing_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Amazon\Ui\DataProvider\Form\Amazon\Account\Settings\Orders\DataProvider</argument>
            <argument name="name" xsi:type="string">amazon_account_settings_order_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">merchant_id</argument>
            <argument name="requestFieldName" xsi:type="string">merchant_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="channel/amazon/account_settings_orders_save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="orders">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true"></item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <container name="order_settings_help_container" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">1</item>
                </item>
            </argument>
        </container>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="dataScope" xsi:type="string">id</item>
                </item>
            </argument>
        </field>
        <field name="merchant_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                    <item name="dataScope" xsi:type="string">merchant_id</item>
                </item>
            </argument>
        </field>
        <field name="order_is_active">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Account\Settings\Orders\OrderCreation</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="label" xsi:type="string" translate="true">Import Amazon Orders</item>
                    <item name="component" xsi:type="string">Magento_Amazon/js/form/element/order-creation</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">order_is_active</item>
                    <item name="default" xsi:type="string"></item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="default_store">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Account\Settings\Orders\MagentoStoreId</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="label" xsi:type="string" translate="true">Import Amazon Orders Into Magento Store</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">default_store</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="customer_is_active">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Customer Creation</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">customer_is_active</item>
                </item>
                <item name="options" xsi:type="array">
                    <item name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">No Customer Creation (guest)</item>
                    </item>
                    <item name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Build New Customer Account</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="is_external_order_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Order Number Source</item>
                    <item name="component" xsi:type="string">Magento_Amazon/js/form/element/external-order-id</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataScope" xsi:type="string">is_external_order_id</item>
                </item>
                <item name="options" xsi:type="array">
                    <item name="0" xsi:type="array">
                        <item name="value" xsi:type="number">0</item>
                        <item name="label" xsi:type="string" translate="true">Build Using Magento Order Number</item>
                    </item>
                    <item name="1" xsi:type="array">
                        <item name="value" xsi:type="number">1</item>
                        <item name="label" xsi:type="string" translate="true">Build Using Amazon Order Number</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="reserve">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Account\Settings\Orders\Reserve</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="label" xsi:type="string" translate="true">Pending Orders</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">reserve</item>
                    <item name="default" xsi:type="string">1</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="custom_status_is_active">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Account\Settings\Orders\OrderStatus</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="label" xsi:type="string" translate="true">Order Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">custom_status_is_active</item>
                    <item name="component" xsi:type="string">Magento_Amazon/js/form/element/order-status</item>
                    <item name="default" xsi:type="string">Enabled</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="custom_status">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Account\Settings\Orders\OrderState</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">80</item>
                    <item name="label" xsi:type="string" translate="true">Processing Order Status</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">custom_status</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
