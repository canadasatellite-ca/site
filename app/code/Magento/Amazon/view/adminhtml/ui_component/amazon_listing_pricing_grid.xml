<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">amazon_listing_pricing_grid.amazon_listing_pricing_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>amazon_listing_pricing_grid_columns</spinner>
        <deps>
            <dep>amazon_listing_pricing_grid.amazon_listing_pricing_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="amazon_listing_pricing_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="cacheRequests" xsi:type="boolean">false</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
            <filterUrlParams>
                <param name="merchant_id">*</param>
            </filterUrlParams>
        </settings>
        <aclResource>Magento_SalesChannels::channel_amazon</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="amazon_listing_pricing_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="sticky" xsi:type="boolean">false</item>
            </item>
        </argument>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <exportButton name="export_button"/>
        <filters name="listing_pricing_filters" />
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="amazon_listing_pricing_grid_columns">
        <selectionsColumn name="ids">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="indexField" xsi:type="string">id</item>
                </item>
            </argument>
        </selectionsColumn>
        <column name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="label" xsi:type="string" translate="true">Id</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
        <column name="account_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">23</item>
                    <item name="label" xsi:type="string" translate="true">Account Name</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
        <column name="merchant_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="label" xsi:type="string" translate="true">Merchant Id</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </column>
        <column name="seller_sku">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="resizeDefaultWidth" xsi:type="string">1</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="label" xsi:type="string" translate="true">Amazon Seller SKU</item>
                </item>
            </argument>
        </column>
        <column name="asin">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">40</item>
                    <item name="label" xsi:type="string" translate="true">ASIN</item>
                </item>
            </argument>
        </column>
        <column name="name" class="Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\ProductName">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="resizeDefaultWidth" xsi:type="string">1</item>
                    <item name="bodyTmpl" xsi:type="string">ui/grid/cells/html</item>
                    <item name="sortable" xsi:type="boolean">false</item>
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="label" xsi:type="string" translate="true">Product Listing Name</item>
                </item>
            </argument>
        </column>
        <column name="landed_price" class="Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\LandedPrice" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="label" xsi:type="string" translate="true">Your Landed Price</item>
                </item>
            </argument>
        </column>
        <column name="lowest_landed_price" class="Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\LowestLandedPrice" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sortOrder" xsi:type="number">70</item>
                    <item name="label" xsi:type="string" translate="true">Lowest Landed Price</item>
                </item>
            </argument>
        </column>
        <column name="lowest_condition" class="Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\ConditionOverride" >
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\Condition</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">75</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Condition (lowest price)</item>
                </item>
            </argument>
        </column>
        <column name="bbb_landed_price" class="Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\BbbLandedPrice" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="filter" xsi:type="string">textRange</item>
                    <item name="sortOrder" xsi:type="number">80</item>
                    <item name="label" xsi:type="string" translate="true">Buy Box Landed Price</item>
                </item>
            </argument>
        </column>
        <column name="is_seller">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Listing\Common\YesNo</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">90</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Is Seller (Buy Box)</item>
                </item>
            </argument>
        </column>
        <column name="bbb_condition" class="Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\ConditionOverride" >
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Listing\Amazon\Account\Listing\Condition</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">95</item>
                    <item name="filter" xsi:type="string">select</item>
                    <item name="component" xsi:type="string">Magento_Ui/js/grid/columns/select</item>
                    <item name="dataType" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Condition (buy box)</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
