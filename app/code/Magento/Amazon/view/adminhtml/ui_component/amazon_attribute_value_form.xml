<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">amazon_attribute_value_form.amazon_attribute_value_form_data_source</item>
            <item name="deps" xsi:type="string">amazon_attribute_value_form.amazon_attribute_value_form_data_source</item>
        </item>
        <item name="spinner" xsi:type="string">amazon_attribute_value_form</item>
        <item name="label" xsi:type="string" translate="true">Attributes</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">amazon_attribute_value_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <dataSource name="settings_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magento\Amazon\Ui\DataProvider\Form\Amazon\Attribute\Value\DataProvider</argument>
            <argument name="name" xsi:type="string">amazon_attribute_value_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="channel/amazon/attribute_value_save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="channel_amazon_attributes">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true"></item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>
        <field name="id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">hidden</item>
                </item>
            </argument>
        </field>
        <field name="catalog_attribute">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\CatalogAttributes</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="label" xsi:type="string" translate="true">Select Magento Product Attribute</item>
                    <item name="component" xsi:type="string">Magento_Amazon/js/form/element/magento-attribute</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">catalog_attribute</item>
                </item>
            </argument>
        </field>
        <field name="amazon_attribute">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="label" xsi:type="string" translate="true">Amazon Attribute Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="disabled" xsi:type="string">true</item>
                    <item name="dataScope" xsi:type="string">amazon_attribute</item>
                </item>
            </argument>
        </field>
        <field name="is_active">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Is Active</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="string">1</item>
                        <item name="false" xsi:type="string">0</item>
                    </item>
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
        </field>
        <field name="overwrite">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\Overwrite</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">50</item>
                    <item name="label" xsi:type="string" translate="true">Overwrite Existing Value</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="dataScope" xsi:type="string">overwrite</item>
                </item>
            </argument>
        </field>
        <fieldset name="scope_fieldset">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="collapsible" xsi:type="boolean">false</item>
                    <item name="label" xsi:type="string" translate="true"></item>
                    <item name="sortOrder" xsi:type="number">180</item>
                </item>
            </argument>
            <field name="is_global">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\IsGlobal</item>
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">190</item>
                        <item name="component" xsi:type="string">Magento_Amazon/js/form/element/is-global</item>
                        <item name="label" xsi:type="string" translate="true">Magento Product Attribute Scope</item>
                        <item name="formElement" xsi:type="string">select</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="dataScope" xsi:type="string">is_global</item>
                        <item name="default" xsi:type="string">1</item>
                    </item>
                </argument>
            </field>
            <field name="store_ids">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\StoreIds</item>
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">200</item>
                        <item name="label" xsi:type="string" translate="true">Store Views (to import values into)</item>
                        <item name="formElement" xsi:type="string">multiselect</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="dataScope" xsi:type="string">store_ids</item>
                        <item name="default" xsi:type="string">0</item>
                    </item>
                </argument>
            </field>
        </fieldset>
        <fieldset name="new_attribute_fieldset" >
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="collapsible" xsi:type="boolean">true</item>
                    <item name="opened" xsi:type="boolean">true</item>
                    <item name="sortOrder" xsi:type="number">60</item>
                    <item name="label" xsi:type="string"></item>
                </item>
            </argument>
            <field name="new_name">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">70</item>
                        <item name="label" xsi:type="string" translate="true">Magento Product Attribute Name</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="dataScope" xsi:type="string">new_name</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                </argument>
            </field>
            <field name="new_code">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">80</item>
                        <item name="label" xsi:type="string" translate="true">Magento Product Attribute Code</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="dataScope" xsi:type="string">new_code</item>
                        <item name="validation" xsi:type="array">
                            <item name="validate-code" xsi:type="boolean">true</item>
                            <item name="required-entry" xsi:type="boolean">true</item>
                            <item name="max_text_length" xsi:type="string">30</item>
                        </item>
                    </item>
                </argument>
            </field>
            <field name="attribute_set_ids">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\AttributeSetIds</item>
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">90</item>
                        <item name="label" xsi:type="string" translate="true">Attribute Set Ids</item>
                        <item name="formElement" xsi:type="string">multiselect</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="dataScope" xsi:type="string">attribute_set_ids</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="default" xsi:type="string">4</item>
                    </item>
                </argument>
            </field>
            <field name="type">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\Type</item>
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">100</item>
                        <item name="component" xsi:type="string">Magento_Amazon/js/form/element/type</item>
                        <item name="label" xsi:type="string" translate="true">Type</item>
                        <item name="formElement" xsi:type="string">select</item>
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="dataScope" xsi:type="string">type</item>
                    </item>
                </argument>
            </field>
            <field name="in_promo">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">110</item>
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="label" xsi:type="string" translate="true">Use for Promo Rule Conditions</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="string">1</item>
                            <item name="false" xsi:type="string">0</item>
                        </item>
                        <item name="default" xsi:type="string">0</item>
                    </item>
                </argument>
            </field>
            <field name="in_search">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">120</item>
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="label" xsi:type="string" translate="true">Used in Search</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="string">1</item>
                            <item name="false" xsi:type="string">0</item>
                        </item>
                        <item name="default" xsi:type="string">0</item>
                    </item>
                </argument>
            </field>
            <field name="comparable">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="sortOrder" xsi:type="number">130</item>
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="label" xsi:type="string" translate="true">Comparable on Storefront</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="string">1</item>
                            <item name="false" xsi:type="string">0</item>
                        </item>
                        <item name="default" xsi:type="string">0</item>
                    </item>
                </argument>
            </field>
            <fieldset name="new_attribute_select_fieldset">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="collapsible" xsi:type="boolean">false</item>
                        <item name="label" xsi:type="string" translate="true"></item>
                        <item name="sortOrder" xsi:type="number">140</item>
                    </item>
                </argument>
                <field name="in_navigation">
                    <argument name="data" xsi:type="array">
                        <item name="options" xsi:type="object">Magento\Amazon\Ui\Component\Form\Amazon\Attribute\Value\InNavigation</item>
                        <item name="config" xsi:type="array">
                            <item name="sortOrder" xsi:type="number">150</item>
                            <item name="label" xsi:type="string" translate="true">Use in Layered Navigation</item>
                            <item name="visibleValue" xsi:type="string">2</item>
                            <item name="formElement" xsi:type="string">select</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="dataScope" xsi:type="string">in_navigation</item>
                        </item>
                    </argument>
                </field>
                <field name="in_search_navigation">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="sortOrder" xsi:type="number">160</item>
                            <item name="dataType" xsi:type="string">boolean</item>
                            <item name="label" xsi:type="string" translate="true">Use in Search Results Layered Navigation</item>
                            <item name="formElement" xsi:type="string">checkbox</item>
                            <item name="prefer" xsi:type="string">toggle</item>
                            <item name="dataScope" xsi:type="string">in_search_navigation</item>
                            <item name="validation" xsi:type="array">
                                <item name="required-entry" xsi:type="boolean">true</item>
                            </item>
                            <item name="valueMap" xsi:type="array">
                                <item name="true" xsi:type="string">1</item>
                                <item name="false" xsi:type="string">0</item>
                            </item>
                            <item name="default" xsi:type="string">0</item>
                        </item>
                    </argument>
                </field>
                <field name="position">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="sortOrder" xsi:type="number">170</item>
                            <item name="label" xsi:type="string" translate="true">Position</item>
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="dataScope" xsi:type="string">position</item>
                            <item name="validation" xsi:type="array">
                                <item name="validate-zero-or-greater" xsi:type="boolean">true</item>
                            </item>
                        </item>
                    </argument>
                </field>
            </fieldset>
        </fieldset>
    </fieldset>
</form>