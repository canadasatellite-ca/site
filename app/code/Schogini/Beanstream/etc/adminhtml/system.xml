<?xml version='1.0'?>
<config
	xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
	xsi:noNamespaceSchemaLocation='urn:magento:module:Magento_Config:etc/system_file.xsd'
>
	<system>
		<section id='payment'>
			<group
				id='beanstream'
				showInDefault='1'
				showInStore='0'
				showInWebsite='1'
				sortOrder='10'
				translate='label'
				type='text'
			>
				<label>Beanstream</label>
				<field
					id='active'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='1'
					translate='label'
					type='select'
				>
					<label>Enabled</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field
					id='title'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='2'
					translate='label'
					type='text'
				>
					<label>Title</label>
				</field>
				<field
					id='test'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='3'
					translate='label'
					type='select'
				>
					<label>Test mode</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field
					id='merchant_id'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='4'
					translate='label'
					type='text'
				>
					<label>Beanstream Merchant ID</label>
				</field>
				<field
					id='merchant_username'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='5'
					translate='label'
					type='text'
				>
					<label>Beanstream Username</label>
				</field>
				<field
					id='merchant_password'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='6'
					translate='label'
					type='text'
				>
					<label>Beanstream Password</label>
				</field>
				<field
					id='payment_action'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='7'
					translate='label'
					type='select'
				>
					<label>Payment Action</label>
					<source_model>Schogini\Beanstream\Model\Source\Paymentaction</source_model>
				</field>
				<field
					id='order_status'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='8'
					translate='label'
					type='select'
				>
					<label>New order status</label>
					<source_model>Schogini\Beanstream\Model\Source\Processing</source_model>
				</field>
				<field
					id='cctypes'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='9'
					translate='label'
					type='multiselect'
				>
					<label>Credit Card Types</label>
					<source_model>Schogini\Beanstream\Model\Source\Cctype</source_model>
				</field>
				<field
					id='useccv'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='11'
					translate='label'
					type='select'
				>
					<label>Credit Card Verification</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field
					id='allowspecific'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='12'
					translate='label'
					type='allowspecific'
				>
					<label>Payment from Applicable Countries</label>
					<source_model>Magento\Payment\Model\Config\Source\Allspecificcountries</source_model>
				</field>
				<field
					id='specificcountry'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='13'
					translate='label'
					type='multiselect'
				>
					<label>Payment from Specific Countries</label>
					<source_model>Magento\Directory\Model\Config\Source\Country</source_model>
				</field>
				<field
					id='debug'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='17'
					translate='label'
					type='select'
				>
					<label>Debug</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field
					id='min_order_total'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='18'
					translate='label'
					type='text'
				>
					<label>Minimum Order Total</label>
				</field>
				<field
					id='max_order_total'
					showInDefault='1'
					showInStore='0'
					showInWebsite='1'
					sortOrder='19'
					translate='label'
					type='text'
				>
					<label>Maximum Order Total</label>
				</field>
			</group>
		</section>
	</system>
</config>